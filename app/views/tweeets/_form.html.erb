<%= simple_form_for @tweeet, validate: true do |f| %>
  <%= f.error_notification %>

  <div class="field">
    <div class="control">
      <%= f.input :content, label: "Tweet about it", input_html: {class: "textarea"}, wrapper: false,
                  label_html: {class: "label"}, placeholder: "Componse a new tweeet...", autofocus: true %>
    </div>
  </div>

  <%= f.button :submit, class: "button is-info" %>

  <% unless current_page?(root_path) %>
    <%= link_to 'Cancel', tweeets_path, class: 'button is-dark is-pulled-right' %>
  <% end %>

<% end %>