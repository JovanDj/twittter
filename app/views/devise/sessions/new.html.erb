<section class="section">
  <div class="container">

    <div class="columns is-centered">

      <h2 class="title is-2">Login</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="field">
          <dif class="control">
            <%= f.input :email, required: false, autofocus: true, input_html: {class: "input"},
                        wrapper: false, label_html: {class: "label"} %>

          </dif>
        </div>

        <div class="field">
          <dif class="control">
            <%= f.input :password, required: false, input_html: {class: "input"},
                        wrapper: false, label_html: {class: "label"} %>

          </dif>
        </div>

        <div class="field">
          <dif class="control">
            <%= f.input :remember_me, input_html: {class: "checkbox"},
                        wrapper: false, label_html: {class: "checkbox"}, as: :boolean if devise_mapping.rememberable?
            %>
          </dif>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
